#:kivy 1.7.2

<StartMenu>:
    filebtn: file_select_button

    Label:
        font_size: '70dp'
        center_x: root.center_x
        top: root.top
        text: "Log Viewer"

    Button:
        id: file_select_button
        font_size: '30dp'
        center_x: root.center_x
        center_y: root.center_y
        width: '240dp'
        text: "Select\nTelemetry Log"

<ModeMenu>:
    readbtn: read_log_button
    graphbtn:graph_log_button

    Label:
        font_size: 50
        center_x: root.center_x
        top: root.top
        text: "Select Mode"
        
        Button:
            id:read_log_button
            font_size: 30
            center_x: root.center_x
            center_y: root.height * 1/3
            width: '240dp'
            text: "Read Log"

        Button:
            id:graph_log_button
            font_size: 30
            center_x: root.center_x
            center_y: root.height * 2/3
            width: '240dp'
            text: "Graph Log"

<Reader>:
    log_text: scroll_label_text
    scroll_up: up_btn
    scroll_down: down_btn

    xscroll_up: up_halfscreen_btn
    xscroll_down: down_halfscreen_btn

    line_pos: line_count

    scrollbar: scrollbar_slider
    
    Label:
        id: scroll_label_text
        font_size: '18sp'
        text: "log here"
        
    Button:
        id: up_btn
        top: root.top
        text: '^'

    Button:
        id: down_btn
        top: self.height
        text: 'v'

    Button:
        id: up_halfscreen_btn
        top: root.top
        x: up_btn.width
        text:'^^'

    Button:
        id: down_halfscreen_btn
        top: self.height
        x: down_btn.width
        text:'vv'
        
    Label:
        id: line_count
        text: 'lines: '
        x: down_btn.width * 3
        font_size: '24sp'

    Slider:
        id: scrollbar_slider    
        x: root.width-self.width
        y: down_btn.top
        height: root.height - up_btn.height*2
        orientation: 'vertical'
        value: '100dp'

            