#:kivy 1.7.2

<StartMenu>:
	filebtn: file_select_button

	Label:
		font_size: 70
		center_x: root.center_x
		top: root.top
		text: "Log Viewer v0.0.1"

	Button:
		id: file_select_button
		font_size: 30
		center_x: root.center_x
		center_y: root.center_y
		width: 240
		text: "Select\nTelemetry Log"

<ModeMenu>
	readbtn: read_log_button
	graphbtn:graph_log_button

	Label:
		font_size: 50
		center_x: root.center_x
		top: root.top
		text: "Select Mode"
		
	Button:
		id:read_log_button
		font_size: 30
		center_x: root.center_x
		center_y: root.height * 1/3
		width: 240
		text: "Read Log"

	Button:
		id:graph_log_button
		font_size: 30
		center_x: root.center_x
		center_y: root.height * 2/3
		width: 240
		text: "Graph Log"

<ReadLog>
	log_text: scroll_label_text
	ScrollView:
		id:scrollview
		pos: root.pos
		width: root.width
		height:root.height			

		Label:
			id: scroll_label_text
			size_hint_y: None
			size_hint_x: None
			font_size: 18
			text: "log here"
			height: self.texture_size[1]
			width: root.width
			text_size: self.width, None